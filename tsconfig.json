{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "src",

		"paths": {
			"@/*": ["./src/*"]
		},
		"allowJs": true,

		"outDir": "build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"noPropertyAccessFromIndexSignature": false,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
